@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-md-6 bg-img">
    </div>
    <div class="col-md-6 Login_form">
        <h1 class="section-title custom_hd">Member Login</h1>
        <section>
            <form id="account" method="post" >
                <h2></h2>
                
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope-fill"></i>Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock-fill"></i>Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                @* <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div> *@
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-custom">Log in</button>
                </div>
                <div>
                    @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p> *@
                    <p class="a_link">
                        <a class="reg_link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New Here? Register as a New User</a>
                    </p>
                    @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
