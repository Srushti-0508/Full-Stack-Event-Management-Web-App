@section Scripts {
    <script>
        window.addEventListener("DOMContentLoaded", (event) => {
            const successMessage = document.getElementById("successMessage");
            if (successMessage) {
                setTimeout(() => {
                    successMessage.style.display = "none";
                }, 3000); // Hides the message after 3 seconds
            }
        });
    </script>
}