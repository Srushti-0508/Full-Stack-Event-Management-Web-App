<div class="Event_Links">
	<div class="section-title">
		<h2>Manage Events</h2>
	</div>
	<ul class="dashboard_links">
	<li>
	<a asp-page="/AddEvent">Add Event</a>
	</li>
	<li>
	<a asp-page="/editDltEvent">Edit or Remove Event</a>
	</li>

				

</ul>
