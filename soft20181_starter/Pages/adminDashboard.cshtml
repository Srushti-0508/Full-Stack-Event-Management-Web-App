<div class="mainContent">
<!-------------Roles Table------------------------------------->
		<div class="section-title">
			<h2>Manage Roles</h2>
		</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>User Roles</th>
			<th>Delete Roles</th>
		</tr>

	</thead>
	<tbody>
		@foreach(var role in Model.roles)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td>
					<a class="btn btn-sm btn-danger order-button float-right" asp-page="/adminDashboard"
					asp-route-id="@role.Id" asp-page-handler="Delete">Delete Role</a>

							
				</td>
			</tr>
		}
		
	</tbody>
	
</table>
<form method="post">

	<input asp-for="roleName" class="form-control-sm" style="width:75%; margin-left:20px;"  />
	<button type="submit" class="btn btn-custom mb-2">
		Add New Role
	</button>

</form>

<!-------------Users Table------------------------------------->
<div class="section-title">
	<h2>Manage User Details</h2>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Users </th>
			<th>Delete Users</th>
			<th>Update Password</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var user in Model.users)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FirstName</td>
				<td>
					<a class="btn btn-sm btn-danger order-button float-right" asp-page="/adminDashboard"
					   asp-route-id="@user.Id" asp-page-handler="Delete">Delete User
				   </a>
				</td>
				<td>
					<form method="post" asp-page-handler="Update" asp-route-id="@user.Id">
						<input asp-for="Password" />
						<input type="submit" value="Update Password" class="btn btn-link" />

					</form>
				</td>
			</tr>
		}
	</tbody>
</table>

<!-------------Contact Table------------------------------------->
<div class="section-title">
	<h2>Contact Us Information</h2>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Inquiry</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var contacts in Model.contact)
		{
			<tr>
				<td>@contacts.Id</td>
				<td>@contacts.Name</td>
				<td>@contacts.Email</td>
				<td>@contacts.Message</td>
			</tr>
		}
	</tbody>
</table>

