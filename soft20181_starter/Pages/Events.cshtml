}

<form class="text-center" method="get">
	<div class="d-flex align-items-center justify-content-center">
		<div class="col-md-4 @* custom-mr *@">
			<input type="text" class="form-control mb-3" id="inlineFormInputName" placeholder="Search by Name/ Location" asp-for="Search">
    </div>
		@* <div class="col-md-4 custom-mr">
			<input type="text" class="form-control mb-3" id="inlineFormInputDate" placeholder="Using Date">
    </div> *@
		<div class="col-auto my-1">
			@* <button type="submit" class="btn btn-primary mb-3">Search</button> *@
			<input type="submit" value="Search" class="btn btn-primary mb-3" /> 
			@if (Model.Filter)
			{
		
				@* <input type="submit" value="Clear Filters" class="btn btn-outline-primary mb-3" asp-page="Events"/> *@
				<a href="/Events" class="btn btn-outline-primary mb-3">Clear Filters</a>
			}
			
		</div>
	</div>
</form>

<div class="row">
	@foreach (var theEvent in @Model.Events)
	{
		<div class="col-4">
			<div class="card" style="margin-bottom: 20px">

				<img src="@theEvent.CoverPhoto" class="card-i mg-top"
					 alt="@theEvent.Name" style="max-height: 200px, max-width:150px;">

				<div class="card-body">
					<h5 class="card-title">@theEvent.Name</h5>
					<p class="card-text">@theEvent.Description</p>
					<ul class="list-group list-group-flush">
						<li class="list-group-item"><i class="bi bi-geo-alt-fill"></i>@theEvent.Location</li>
						<li class="list-group-item"><i class="bi bi-calendar-check-fill"></i>@theEvent.EventDateTime</li>

					</ul>
					<div class="d-flex justify-content-between">
						<a asp-page="/eventDetail" asp-route-id="@theEvent.Id"
						   class="btn btn-custom">Find Out More</a>
						@* <a asp-page="EditEvent" asp-route-id="@theEvent.Id" asp-page-handler="Delete"
						   class="btn btn-danger">Delete</a> *@
					</div>
				</div>
			</div>
		</div>
	}
</div>

