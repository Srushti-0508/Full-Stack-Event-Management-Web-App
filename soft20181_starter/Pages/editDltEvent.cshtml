<div class="row">
	@foreach (var theEvent in @Model.Events)
	{
		<div class="col-4">
			<div class="card" style="margin-bottom: 20px, ">

				<img src="@theEvent.CoverPhoto" class="card-i mg-top"
					 alt="@theEvent.Name" style="max-height: 150px, max-width:150px;">

				<div class="card-body">
					<h5 class="card-title">@theEvent.Name</h5>
					<p class="card-text">@theEvent.Description</p>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">@theEvent.Location</li>
						<li class="list-group-item">@theEvent.EventDateTime</li>

					</ul>
					<div class="d-flex justify-content-between">
						<a asp-page="EditEvent" asp-route-id="@theEvent.Id"
						   class="btn btn-warning">Edit</a>
						<a asp-page="EditEvent" asp-route-id="@theEvent.Id" asp-page-handler="Delete"
					class="btn btn-danger">Delete</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>

